{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run pre-commit",
      "type": "shell",
      "command": "poetry run pre-commit run --all-files",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run pytest",
      "type": "shell",
      "command": "poetry run pytest",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "SSH to Home Assistant OS",
      "type": "shell",
      "command": "haos-ssh"
    }
  ]
}
